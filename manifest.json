{
    "manifest_version": 3,
    "name": "Daily Task Notifier",
    "version": "1.0",
    "description": "Keeps track of daily tasks and reminders.",
    "permissions": [
        "storage",
        "action"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "service_worker": "background.js",
        "persistent": false
    }
}